<li class="assign_file_file <%= cycle('even', 'odd') %>">
  <%= link_to alchemy.assign_admin_essence_active_storage_pictures_path(
    active_storage_file_id: file_to_assign.id,
    content_id: @content.id
  ),
              remote: true,
              method: 'put' do %>
    <span class="list-primary">
      <%= render_icon(file_to_assign.icon_css_class) %>
      <%= file_to_assign.name %>
    </span>
    <span class="list-secondary">
      <%= mime_to_human(file_to_assign.file.blob.content_type) %>
    </span>
  <% end %>
</li>
